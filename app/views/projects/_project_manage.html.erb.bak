<div class="p15">					<!--窗口中部右侧div-->
			<p class="p3">
				<font color="white">项目管理编辑</font>
			</p>
			<p class="p3">
				<font class="p8">项目名称：</font>
				<%= form_tag('/project/handle_post', remote: true) do |f| %>
				  <div class="field">
    				<%= select_tag :project_select, options_from_collection_for_select(get_user.projects, :id, :name) %>
  				</div>
  			<% end %>
				<input name="save" type="submit" value="保存">				<!--保存、删除和添加按钮-->
				<input name="delete" type="submit" value="删除">
				<input name="add" type="submit" value="添加">
			</p>
			<p>
				<font class="p8">项目名称：</font>
				<input name="text" type="text" size="50%">
			</p>
			<p>
				<font class="p8">项目来源：</font>
				<input name="text" type="text" size="50%">
			</p>
			<p>
				<font class="p8">项目年份：</font>
				<input name="text" type="text" size="20%">
				-
				<input name="text" type="text" size="20%">
			</p>
			<p>
				<font class="p8">项目类型：</font>					<!--项目类型 单选框-->
				<input name="radio" type="radio">横向
				<input name="radio" type="radio">纵向
				<input name="radio" type="radio">自研
			</p>
			<p>
				<font class="p8">项目状态：</font>
				<select name="status">
					<option value="status" selected>未开始
					<option value="status" selected>进行中
					<option value="status" selected>结项		<!--表示项目状态的下拉菜单-->
				</select>
			</p>
			<p>
				<font class="p8">参与方式：</font>					<!--参与方式 单选框-->
				<input name="radio" type="radio">主持
				<input name="radio" type="radio">参与
			</p>
			<p>
				<font class="p8">项目简介：</font>				<!--项目简介的文本区域-->		
				<textarea rows="5" cols="80"></textarea>
			</p>
			<p>
				<font class="p8">当前附件：</font>				<!--当前附件的下拉列表（空）-->			
				<select name="document">
				</select>
			</p>
			<p>
				<font class="p8">文件上传：</font>				<!--文件选择输入框-->			
				<input name="upLoadFile" type="file" size="40">
			</p>
		</div>