<%= form_for(@project, html: {class: :"form-horizontal", role: "form"}) do |f|%>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">项目名称</label>
      <div class="col-sm-10">
        <%= f.text_field :name, class: :"form-control", placeholder: @project.name, required: true, autofocus: true%>
      </div>
      </div>
<!--     <div class="form-group">
            <label for="name" class="col-sm-2 control-label">项目来源</label>
            <div class="col-sm-10">
              <%# f.select :source_id, get_source_select, {},{class: :"form-control", required: true, autofocus: false}%>
            </div>
        </div> -->
      <div class="form-group">
      <label for="date" class="col-sm-2 control-label">项目时间</label>
      <div class="col-sm-10">
        <div class='col-md-6'>
          <div class="form-group">
            <div class='input-group date'>
              <%= f.text_field :start, class: :"form-control", "data-format" => "YYYY-MM-DD",placeholder: @project.start,  autofocus: false, id: "start" %>
              <span class="input-group-addon">-</span>
              <%= f.text_field :end, class: :"form-control", "data-format" => "YYYY-MM-DD", placeholder: @project.end,  autofocus: false, id: "end" %>
            </div>
          </div>
        </div>
      </div>
    </div>
      <script type="text/javascript">
        $(function () {
          $('#start').datetimepicker({
            pickTime: false
           });
          $('#end').datetimepicker({
            pickTime: false
           });
          $("#start").on("change.dp",function (e) {
             $('#end').data("DateTimePicker").setStartDate(e.date);
          });
          $("#end").on("change.dp",function (e) {
             $('#start').data("DateTimePicker").setEndDate(e.date);
          });
        });
      </script>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">项目类型</label>
      <div class="col-md-10">
        <% ProjectType.all.each do |type| %>
          <label class="checkbox-inline">
            <%= f.radio_button :project_type_id, type.id%><%= type.name.chomp %>
          </label>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">项目状态</label>
      <div class="col-md-10">
        <% ProjectState.all.each do |state| %>
          <label class="checkbox-inline">
            <%= f.radio_button :project_state_id, state.id%><%= state.name.chomp %>
          </label>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">参与方式</label>
      <div class="col-md-10">
        <% par_id = get_participation_id(@project, @user) %>
        <% ParticipationType.all.each do |par| %>
          <label class="checkbox-inline">
            <%= radio_button_tag :participation_type_id, par.id, par.id==par_id%><%= par.name.chomp %>
          </label>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">项目描述</label>
      <div class="col-md-10">
        <%= f.text_area :description, class: :"form-control", rows: 6%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-md-10">
        <%= f.submit "提交",class: "btn btn-default pull-left" %>
        <!-- <button type="submit" class="btn btn-default">Submit</button> -->
        <span>  </span>
        <%= link_to get_back_link do %>
          <%= button_tag "取消", class: "btn btn-default", type: :button %>
        <% end %>         
      </div>
    </div>
  <% end %>