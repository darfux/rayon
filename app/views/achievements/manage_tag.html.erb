<% content_for :head do %>
<%= stylesheet_link_tag    "list_tag", media: "all" %>
<% end %>

<% content_for :pre_header do %>
<div class="col-md-2 pull-right btn-group">
    <button type="button" class="btn btn-default glyphicon glyphicon-list" onclick="window.open('<%=achievement_manage_list_path %>', '_self')"/>
    <button type="button" class="btn btn-default glyphicon glyphicon-th-large  active"/>
</div>
<% end %>

<% content_for :bottom_nav do %>
<li><%= link_to 'Create', new_achievement_path %></li>
<% end %>

<% content_for :main_content do %>
<div class="container">
    <div class="row">
        <% counter=1 %>
        <% @achievements.each do |achievement|%>
        <% if counter%4==1 %>
      <!-- new row -->
      <div class="col-md-12 achievement">
        <% end %>
        <div class="col-md-3">

            <div class="panel">
              <div class="panel-heading">
                <h4 class="panel-title"><%= achievement.title %>
                  <cite title="Show">
                    <%= link_to tag(:span, class: "glyphicon glyphicon-eye-open"), achievement_path(achievement.id) %>
                  </cite>
                  <cite title="Edit">
                    <%= link_to tag(:span, class: "glyphicon glyphicon-edit"), edit_achievement_path(achievement.id) %>
                  </cite>
                  <cite title="Remove">
                    <%= link_to tag(:span, class: "glyphicon glyphicon-remove"), achievement_path(achievement.id), method: :delete, data: { confirm: 'Are you sure to delete this achievement?' } %>
                  </cite>
                </h4>
              </div>
              <div class="panel-body">
                <p>
                  <%= get_brief(achievement, 24) %>
                </p>
              </div>
            </div>

          </div>
          <% if counter%4==0 %>
        </div >
        <!-- new row end -->
          <% end %>
          <% counter+=1 %>
        <% end %>
    </div>      
</div>

<% end %>