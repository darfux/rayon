<%= form_for(@achievement, html: {class: :"form-horizontal", role: "form"}) do |f|%>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">成果标题</label>
      <div class="col-sm-10">
        <%= f.text_field :title, class: :"form-control", placeholder: @achievement.title, required: true, autofocus: true%>
      </div>
    </div>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">成果描述</label>
      <div class="col-md-10">
        <%= f.text_area :description, class: :"form-control", rows: 6%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-md-10">
        <%= f.submit "提交",class: "btn btn-default pull-left" %>
        <!-- <button type="submit" class="btn btn-default">Submit</button> -->
        <span>  </span>
        <%= link_to get_back_link do %>
          <%= button_tag "取消", class: "btn btn-default", type: :button %>
        <% end %>         
      </div>
    </div>
  <% end %>