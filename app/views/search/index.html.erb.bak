<h1>Search#index</h1>
<p>Find me in app/views/search/index.html.erb</p>
<%= form_tag('/search/result')  do |f| %>
<% field_size = 48 %>
  <div class="field">
  <% @SEARCH_TYPE.each do |key, opt| %>
      <%= radio_button_tag :search_type, key, get_check_state(key)%><%= opt[:label] %>
  <% end %>
  </div>

  <div class="field">
    <%= text_field :search, :search_content, size: field_size %>
    <action class="actions">
      <%= submit_tag '搜索' %>
    </action>
  </div>
<% end %>