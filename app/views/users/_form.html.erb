<div class="col-sm-10">
<%= form_for(@user, html: {class: :"form-horizontal", role: "form"}) do |f|%>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">姓名</label>
      <div class="col-sm-4">
        <%= f.text_field :name, class: :"form-control", placeholder: @user.name, required: true, autofocus: true%>
      </div>
    </div>
    <% unless  @user.persisted? %>
      
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">密码</label>
      <div class="col-sm-4">
        <%= f.password_field :password, class: :"form-control", required: true %>
      </div>
    </div>    
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">密码确认</label>
      <div class="col-sm-4">
        <%= f.password_field :password_confirmation, class: :"form-control", required: true %>
      </div>
    </div>
    <% end %>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">职称</label>
      <div class="col-sm-4">
        <%= f.select :title_id, Title.all.collect {|t| [t.name, t.id]}, {},{class: :"form-control", required: true, autofocus: false}%>
      </div>
    </div>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">个人简介</label>
      <div class="col-md-10">
        <%= f.text_area :introduction, class: :"form-control", rows: 6%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-md-10">
        <%= f.submit "提交",class: "btn btn-default pull-left" %>
        <!-- <button type="submit" class="btn btn-default">Submit</button> -->
        <span>  </span>
        <%= link_to get_back_link do %>
          <%= button_tag "取消", class: "btn btn-default", type: :button %>
        <% end %>         
      </div>
    </div>
  <% end %>
</div>