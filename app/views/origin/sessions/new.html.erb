<div class="login">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag '/login' do %>

    <fieldset>
      <legend>Please Log In</legend>
      <div>
        <label for="uid">Uid:</label>
        <%= text_field_tag :uid, params[:uid] %>
      </div>

      <div>
        <label for="password">Password:</label>
        <%= password_field_tag :password, params[:password] %>
      </div>
  
      <div>
        <%= submit_tag "Login" %>
      </div>
    </fieldset>
  <% end %>
</div>
