<%= form_for(@paper, html: {class: :"form-horizontal", role: "form"}) do |f|%>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">论文标题</label>
      <div class="col-sm-10">
        <%= f.text_field :title, class: :"form-control", placeholder: @paper.title, required: true, autofocus: true%>
      </div>
    </div>
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">身份</label>
        <div class="col-sm-10">
        <% own_id = get_own_id(@paper, @user) %>
        <% UserOwnType.all.each do |own| %>
          <label class="checkbox-inline">
            <%= radio_button_tag :user_own_type_id, own.id, own.id==own_id%><%= own.name.chomp %>
          </label>
        <% end %>
        </div>
    </div>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">发表于</label>
      <div class="col-sm-10">
        <%= f.text_field :publish, class: :"form-control", placeholder: @paper.title, required: true, autofocus: false%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-md-10">
        <%= f.submit "提交",class: "btn btn-default pull-left" %>
        <!-- <button type="submit" class="btn btn-default">Submit</button> -->
        <span>  </span>
        <%= link_to get_back_link do %>
          <%= button_tag "取消", class: "btn btn-default", type: :button %>
        <% end %>         
      </div>
    </div>
  <% end %>