<% @papers.each do |paper|%>
<tr>
    <td><%= paper.id %></td>
    <td><%= paper.title %></td>
    <td><%= get_own_type(paper, @user) %></td>
    <td><%= get_brief_text(paper.publish, 10) %></td>
    <td>
        <%= link_to '显示', paper %>
        <%= link_to '编辑', edit_paper_path(paper.id) %>
        <%= link_to '删除', paper, method: :delete, data: { confirm: 'Are you sure to delete this paper?' } %>
    </td>
</tr>
<% end %>